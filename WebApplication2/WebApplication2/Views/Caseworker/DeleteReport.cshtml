@model WebApplication2.Data.GeoChange

@{
    ViewData["Title"] = "Delete Report";
}

<h1>Slett rapport</h1>

<h3>Er du sikker på at du ønsker å slette rapporten?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeoJson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJson)
        </dd>
    </dl>

    <form asp-action="deleteReport" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Add hidden field for returnUrl -->
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" /> <!-- Include returnUrl here -->

        <button type="submit" class="btn btn-danger">Slett</button>
        <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">Avbryt</a> <!-- Use returnUrl for the cancel link -->
    </form>

</div>
