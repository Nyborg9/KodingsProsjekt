@model IEnumerable<WebApplication2.Models.UserListViewModel>

@{
    ViewData["Title"] = "List of All Users";
}

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="DeleteUser " asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    @if (ViewBag.IsAdmin)
                    {
                        // Show promote and demote buttons for admin
                        if (user.IsUser)
                        {
                            <a asp-action="PromoteToCaseworker" asp-route-id="@user.Id" class="btn btn-primary">Promote to Caseworker</a>
                        }
                        else if (user.IsCaseworker)
                        {
                            <a asp-action="DemoteToUser" asp-route-id="@user.Id" class="btn btn-warning">Demote to User</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>