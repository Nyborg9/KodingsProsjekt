@model List<WebApplication2.Data.GeoChange>
@{
    ViewData["Title"] = "Overview";
    Layout = "_Layout"; // Use your layout file if needed
}

<h2 class="text-center">Oversikt over innsendte meldinger</h2>

<div class="container mt-5">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>GeoJSON</th>
                <th>Beskrivelse</th>
                <th>Epost</th>
                <th>Status</th>
                <th>Detaljer</th>
                <th>Rediger</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var change in Model)
                {
                    <tr>
                        <td>@change.Id</td>
                        <td>@change.GeoJson</td>
                        <td>@change.Description</td>
                        <td></td> <!-- Assuming Email is a property in GeoChange -->
                        <td></td> <!-- Assuming Status is a property in GeoChange -->
                        <td>
                            <a asp-controller="GeoChanges" asp-action="Details" asp-route-id="@change.Id">Vis Detaljer</a>
                        </td>
                        <td>
                            <div class="edit-delete-links">
                                <a asp-controller="GeoChanges" asp-action="Edit" asp-route-id="@change.Id">Rediger</a> |
                                <a asp-controller="GeoChanges" asp-action="Delete" asp-route-id="@change.Id">Slett</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Ingen meldinger funnet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>