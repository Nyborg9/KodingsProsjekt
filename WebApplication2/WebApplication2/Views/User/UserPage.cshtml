@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    ViewData["Title"] = "Create Report";

    Layout = "_Layout";
}


    <div class="container mt-5">
        <h2 class="text-left">@user.UserName!</h2>

        <div class="mt-4">
            <a asp-controller="GeoChanges" asp-action="Create" class="btn btn-primary">Lag en ny rapport</a>
            
            <a asp-controller="GeoChanges" asp-action="Index" class="btn btn-secondary">Se rapportene</a>

            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Slett brukeren</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
