@model IEnumerable<WebApplication2.Data.GeoChange>

@{
    ViewData["Title"] = "Index";
}

<h2>Geo Changes</h2>

<table>
    <thead>
        <tr>
            <th>Description</th>
            <th>GeoJson</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var geoChange in Model)
        {
            <tr>
                <td>@geoChange.Description</td>
                <td>@geoChange.GeoJson</td>
            </tr>
        }
    </tbody>
</table>

<!-- Add your map integration here -->
<div id="map"></div>

<script>
    // Assuming you are using a mapping library like Leaflet or Google Maps
    var geoChanges = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

    // Initialize your map here
    var map = L.map('map').setView([latitude, longitude], zoomLevel);

    // Loop through geoChanges and add them to the map
    geoChanges.forEach(function (geoChange) {
        // Parse geoChange.GeoJson and add it to the map
        // Example for Leaflet:
        var geoJsonLayer = L.geoJSON(geoChange.GeoJson).addTo(map);
    });
</script>
